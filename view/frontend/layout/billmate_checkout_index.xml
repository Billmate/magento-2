<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="checkout_cart_index"/>
    <head>
        <css src="Billmate_NwtBillmateCheckout::css/billmatecheckout.css" />
    </head>
    <body>
        <referenceContainer name="content">
            <block
                before="-"
                class="Magento\Cms\Block\Block"
                name="billmate.checkout.additionalblock.top"
                ifconfig="payment/nwt_billmate/design/enable_additional_block">
                <arguments> 
                    <argument name="block_id" xsi:type="helper" helper="Billmate\NwtBillmateCheckout\Gateway\Config\Config::getAdditionalBlock"/>
                </arguments>
            </block> 
        </referenceContainer>
		<referenceContainer name="store.menu" remove="true" />
		<referenceContainer name="container_mobile_header_top" remove="true" />
		<referenceContainer name="header_container" remove="true" />
		<referenceBlock name="base-header-container" remove="true" />
        <referenceBlock name="top.search" remove="true" />
        <referenceBlock name="minicart" remove="true" />
        <referenceBlock name="checkout.cart.summary.title" remove="true" />

        <referenceBlock name="checkout.cart.shipping" template="Billmate_NwtBillmateCheckout::checkout/shipping.phtml" />
        <referenceBlock name="checkout.item.price.row" template="Billmate_NwtBillmateCheckout::checkout/cart/item/price/row.phtml">
            <block class="Magento\Checkout\Block\Item\Price\Renderer" name="checkout.item.price.row.ko-viewmodel" as="ko-viewmodel" template="Billmate_NwtBillmateCheckout::checkout/cart/item/price/row/ko-viewmodel.phtml" />
        </referenceBlock>
        <referenceBlock name="checkout.cart.coupon" template="Billmate_NwtBillmateCheckout::checkout/coupon.phtml" />
        <referenceContainer name="cart.summary" htmlClass="billmate-cart-summary" />
        <referenceContainer name="checkout.cart.container">
            <block name="billmate.checkout.newsletter" after="checkout.cart.form" template="Billmate_NwtBillmateCheckout::checkout/newsletter.phtml" />
        </referenceContainer>
        <referenceContainer name="checkout.cart.items">
            <block name="billmate.checkout.iframe" cacheable="false" after="-" template="Billmate_NwtBillmateCheckout::checkout/iframe.phtml">
                <arguments>
                    <argument name="view_model" xsi:type="object">Billmate\NwtBillmateCheckout\ViewModel\Checkout</argument>
                    <argument name="purchase_initialized_hide_target" xsi:type="string">div.cart-container</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="checkout.cart.methods" remove="true" />
        <referenceBlock name="checkout.cart.shipping">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="block-summary" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="block-rates" xsi:type="array">
                                    <item name="component" xsi:type="string">Billmate_NwtBillmateCheckout/js/checkout/view/shipping-rates</item>
                                </item>
                                <item name="block-shipping" xsi:type="array">
                                    <item name="children" xsi:type="null" />
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
        <move element="checkout.cart.form" destination="checkout.cart.container" before="-"/>
    </body>
</page>